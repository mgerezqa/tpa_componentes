{{#partial "formulario"}}
    <form id="form_fisico">
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" class="entrada_form form-control shadow-none rounded-4" id="campo_nombre_fisico"
                           value="{{datos.nombre}}" placeholder="Nombre" disabled>
                    <label for="campo_nombre_fisico">Nombre</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" class="entrada_form form-control shadow-none rounded-4" id="campo_apellido_fisico"
                           value="{{datos.apellido}}" placeholder="Apellido" disabled>
                    <label for="campo_apellido_fisico">Apellido</label>
                </div>
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="form-floating">
                    <select class="entrada_form form-select shadow-none rounded-4" id="campo_tipo_documento_fisico" disabled>
                        <option value="1" selected>Opción 1</option>
                        <option value="2">Opción 2</option>
                        <option value="3">Opción n</option>
                    </select>
                    <label for="campo_tipo_documento_fisico">Tipo Documento</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <input type="text" class="entrada_form form-control shadow-none rounded-4" id="campo_nro_documento_fisico"
                           value="123456789" placeholder="Nro Documento" disabled>
                    <label for="campo_nro_documento_fisico">Nro Documento</label>
                </div>
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" class="entrada_form form-control shadow-none rounded-4"
                           id="campo_fecha_nacimiento_fisico" value="{{data.nacimiento}}" placeholder="Fecha de Nacimiento" disabled>
                    <label for="campo_fecha_nacimiento_fisico">Fecha de Nacimiento</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="text" class="entrada_form form-control shadow-none rounded-4" id="campo_direccion_fisico"
                           value="Calle Falsa 123" placeholder="Dirección" disabled>
                    <label for="campo_direccion_fisico">Dirección</label>
                </div>
            </div>
        </div>

        <div class="mt-3 mb-2 fst-italic text-muted text-center">- Seleccione la forma de contacto principal -</div>

        <div class="row g-3 mb-4 text-center">
            <div class="col-md-4">
                <div class="input-group">
                    <div class="input-group-text rounded-start-4">
                        <input class="entrada_form form-check-input mt-0 shadow-none" type="radio"
                               name="campo_contacto_preferido_fisico" checked disabled>
                    </div>
                    <div class="form-floating flex-grow-1">
                        <input type="text" class="entrada_form form-control shadow-none rounded-end-4"
                               id="campo_whatsapp_fisico" value="123456789" placeholder="WhatsApp" disabled>
                        <label for="campo_whatsapp_fisico">WhatsApp</label>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <div class="input-group-text rounded-start-4">
                        <input class="entrada_form form-check-input mt-0 shadow-none" type="radio"
                               name="campo_contacto_preferido_fisico" disabled>
                    </div>
                    <div class="form-floating flex-grow-1">
                        <input type="text" class="entrada_form form-control shadow-none rounded-end-4"
                               id="campo_telegram_fisico" value="987654321" placeholder="Telegram" disabled>
                        <label for="campo_telegram_fisico">Telegram</label>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <div class="input-group-text rounded-start-4">
                        <input class="entrada_form form-check-input mt-0 shadow-none" type="radio"
                               name="campo_contacto_preferido_fisico" disabled>
                    </div>
                    <div class="form-floating flex-grow-1">
                        <input type="text" class="entrada_form form-control shadow-none rounded-end-4"
                               id="campo_email_fisico" value="pepe@ejemplo.com" placeholder="Email" disabled>
                        <label for="campo_email_fisico">Email</label>
                    </div>
                </div>
            </div>
        </div>

        <div id="cont_editar_form_fisico" class="row justify-content-center mb-4 py-4">
            <div class="col-6 col-md-4">
                <button id="btn_editar_form_fisico" type="button" class="boton py-1 w-100"><span>EDITAR</span></button>
            </div>
        </div>

        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Atención:</strong> El medio seleccionado como principal será utilizado para recibir todas las notificaciones.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>


        <div id="cont_cancelar_guardar_form_fisico" class="row justify-content-around d-none mb-4">
            <div class="col-6 col-md-4">
                <button id="btn_cancelar_form_fisico" type="button" class="boton boton_rojo py-1 w-100"><span>CANCELAR</span></button>
            </div>
            <div class="col-6 col-md-4">
                <button id="btn_guardar_form_fisico" type="button" class="boton boton_verde py-1 w-100"><span>GUARDAR</span></button>
            </div>
        </div>
    </form>
{{/partial}}
