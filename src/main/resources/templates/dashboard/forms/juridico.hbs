<!-- Modal de edición para el colaborador juridico -->
{{#partial "titulo"}}
    {{#if edit}}
        <i class="bi bi-pencil-square"></i> Editar colaborador jurídico
    {{else}}
        <i class="bi bi-plus-circle-fill"></i> Crear colaborador jurídico
    {{/if}}
{{/partial}}

{{#partial "form"}}
    <form action="{{action}}" method="POST">
        <!-- Cuerpo del modal -->

        <!-- Campo Razón Social -->
                <div class="mb-3">
                    <label for="editarRazonSocial" class="form-label">Razón Social</label>
                    <input type="text" class="form-control" id="editarRazonSocial"
                           name="razonSocial"
                           value={{colaboradorJuridico.razonSocial}} required> <!-- El value representa el dato actual -->
                </div>

                <!-- Campo Rubro -->
                <div class="mb-3">
                    <label for="editarRubro" class="form-label">Rubro</label>
                    <input type="text" class="form-control" id="editarRubro"
                           name="rubro"
                           value={{colaboradorJuridico.rubro}} required>
                </div>

                <!-- Campo Email -->
                <div class="mb-3">
                    <label for="editarEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="editarEmail"
                           name="email"
                           value={{colaboradorJuridico.email}} required>
                </div>

                <!-- Select Tipo de Razón Social -->
                <div class="mb-3">
                    <label for="editarTipoDeRazonSocial" class="form-label">Tipo de Razón Social</label>
                    <select class="form-select" id="editarTipoDeRazonSocial" required>
                        <option value="" disabled>Seleccionar tipo...</option>
                        <option value="1" selected>Gubernamental</option> <!-- Opción seleccionada -->
                        <option value="2">ONG</option>
                        <option value="3">Empresa</option>
                        <option value="4">Institución</option>
                    </select>
                </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="editarEstadoColaboradorJuridico"
                       name="estadoColaboradorJuridico"
                       value="true"
                       {{#if colaboradorJuridico.activo}}checked{{/if}}>
                <label class="form-check-label" for="editarEstadoColaboradorJuridico">Activo</label>
            </div>
        </div>


        <!-- Pie del modal -->
        <div class="modal-footer d-flex justify-content-between">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> Cancelar</button>
            {{#if edit}}
                <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Guardar Cambios</button>
            {{else}}
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Crear</button>
            {{/if}}
        </div>
</form>
{{/partial}}
{{> templates/dashboard/forms/base}}
