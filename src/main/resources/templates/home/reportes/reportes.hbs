{> templates/home/base}}

{{#*inline "styles"}}
    <link rel="stylesheet" href="/css/style_dashboard.css">
{{/inline}}

{{#*inline "title"}}
    Reportes
{{/inline}}

{{#*inline "contenido"}}
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto px-0">
                <div id="sidebar" class="collapse collapse-horizontal show border-end">
                    <div id="sidebar-nav" class="list-group border-0 rounded-0 text-sm-start min-vh-100">
                        <a href="/dashboard/fisicos" class="list-group-item border-end-0 d-inline-block text-truncate py-4 fs-5">
                            <i class="bi bi-people-fill"></i> <span>Colaboradores físicos</span>
                        </a>
                        <a href="/dashboard/juridicos" class="list-group-item border-end-0 d-inline-block text-truncate py-4 fs-5">
                            <i class="bi bi-building"></i> <span>Colaboradores jurídicos</span>
                        </a>
                        <a href="/dashboard/heladeras" class="list-group-item border-end-0 d-inline-block text-truncate py-4 fs-5">
                            <i class="bi bi-pc"></i> <span>Heladeras</span>
                        </a>
                        <a href="/dashboard/tecnicos" class="list-group-item border-end-0 d-inline-block text-truncate py-4 fs-5">
                            <i class="bi bi-tools"></i> <span>Técnicos</span>
                        </a>
                        <a href="/dashboard/reportes" class="list-group-item border-end-0 d-inline-block text-truncate py-4 fs-5 active">
                            <i class="bi bi-file-earmark-text"></i> <span>Reportes</span>
                        </a>
                    </div>
                </div>
            </div>
            <main class="col ps-md-2 pt-2">
                <a href="#" data-bs-target="#sidebar" data-bs-toggle="collapse" class="border rounded-3 p-1 text-decoration-none">
                    <i class="bi bi-list bi-lg py-2 p-1"></i> Menu
                </a>
                <div class="page-header pt-3 text-center">
                    <h2>Lista de Reportes</h2>
                </div>
                <div class="row">
                    <div class="col-12">
                        <ul class="list-group">
                            {{#each reportes}}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>{{this.nombre}} - {{this.fechaGeneracion}}</span>
                                    <div>
                                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalVerReporte{{this.id}}">
                                            Ver
                                        </button>
                                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalEliminarReporte{{this.id}}">
                                            Eliminar
                                        </button>
                                    </div>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </main>
        </div>
    </div>

    {{#each reportes}}
        <!-- Modal Ver Reporte -->
        <div class="modal fade" id="modalVerReporte{{this.id}}" tabindex="-1" aria-labelledby="modalVerReporteLabel{{this.id}}" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalVerReporteLabel{{this.id}}">Reporte: {{this.nombre}}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Fecha de Generación: {{this.fechaGeneracion}}</p>
                        <p>Detalles: {{this.detalles}}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Eliminar Reporte -->
        <div class="modal fade" id="modalEliminarReporte{{this.id}}" tabindex="-1" aria-labelledby="modalEliminarReporteLabel{{this.id}}" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalEliminarReporteLabel{{this.id}}">Eliminar Reporte</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Estás seguro de que deseas eliminar este reporte?</p>
                    </div>
                    <div class="modal-footer">
                        <form action="/dashboard/reportes/{{this.id}}/delete" method="POST">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{/inline}}

