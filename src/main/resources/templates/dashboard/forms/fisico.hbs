<!-- Modal de edición para el colaborador fisico -->
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-warning text-dark">
            <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Editar colaborador físico</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <!-- Cuerpo del modal -->
            <div class="modal-body">
                <!-- Aquí asignamos el action para que apunte a la URL de actualización -->
                <form action="{{action}}" method="POST">

                    <!-- Campo Nombre -->
                    <div class="mb-3">
                        <label for="editarNombreColaboradorFisico" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="editarNombreColaboradorFisico"
                               name="nombre"
                               value="{{colaboradoresFisicos.nombre}}"
                               required>
                    </div>

                    <!-- Campo Apellido -->
                    <div class="mb-3">
                        <label for="editarApellidoColaboradorFisico" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="editarApellidoColaboradorFisico"
                               name="apellido"
                               value="{{colaboradoresFisicos.apellido}}"
                               required>
                    </div>

                    <!-- Campo Email -->
                    <div class="mb-3">
                        <label for="editarEmailColaboradorFisico" class="form-label">Email</label>
                        <input type="email" class="form-control" id="editarEmailColaboradorFisico"
                               name="email"
                               value="{{colaboradoresFisicos.email}}"
                               required>
                    </div>

                    <!-- Estado -->
                    <div class="mb-3">
                        <label class="form-label">Estado</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="estadoHeladeraToggle"
                                   name="activo" {{#if colaboradoresFisicos.activo}}checked{{/if}}>
                            <label class="form-check-label" for="estadoHeladeraToggle">Activo</label>
                        </div>
                    </div>

                    <!-- Pie del modal -->
                    <div class="modal-footer d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="bi bi-x-circle"></i> Cancelar</button>
                        <button type="submit" class="btn btn-warning"><i class="bi bi-pencil"></i> Guardar cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
