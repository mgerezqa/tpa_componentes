{{#partial "titulo"}}
    {{#if edit}}
        <i class="bi bi-pencil-square"></i> Editar Suscripción
    {{else}}
        <i class="bi bi-plus-circle-fill"></i> Crear Suscripción
    {{/if}}
{{/partial}}
{{#partial "form"}}
    <form action="{{action}}" method="POST">
        <div class="mb-3">
            <label for="suscripcionColaborador" class="form-label">Colaborador</label>
            <select class="form-select" id="suscripcionColaborador" name="colaborador" required>
                <option value="" disabled>Seleccionar colaborador...</option>
                {{#each colaboradores}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Buscar Id Heladera -->
        <div class="mb-3">
            <label for="suscripcionHeladera" class="form-label">Heladera</label>
            <select class="form-select" id="suscripcionHeladera" name="heladera" required>
                <option value="" disabled>Seleccionar heladera...</option>
                {{#each heladeras}}
                    <option value="{{this}}" >{{this}}</option>
                {{/each}}
            </select>
        </div>

        <!-- Buscar Tipo de suscripción -->
        <div class="mb-3">
            <label for="suscripcionTipo" class="form-label">Tipo de suscripción</label>
            <select class="form-select" id="suscripcionTipo" name="tipo" required>
                <option value="" disabled>Seleccionar tipo...</option>
                <option value="1" selected>Por cantidad de viandas</option> <!-- Opción seleccionada -->
                <option value="2">Faltan n para llegar al máximo</option>
                <option value="3">Por desperfecto en heladera</option>
            </select>
        </div>

        <!-- Estado -->
        <div class="mb-3">
            <label class="form-label">Estado</label>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="estadoSuscripcion" name="estado" {{#if estado}}checked{{/if}}>
                <label class="form-check-label" for="estadoSuscripcion">Activo</label>
            </div>
        </div>

        <div class="modal-footer d-flex justify-content-between">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="bi bi-x-circle"></i> Cancelar</button>
            {{#if edit}}
                <button type="submit" class="btn btn-warning"><i class="bi bi-save"></i> Guardar Cambios</button>
            {{else}}
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Crear</button>
            {{/if}}
        </div>
    </form>
{{/partial}}
{{> templates/dashboard/forms/base}}