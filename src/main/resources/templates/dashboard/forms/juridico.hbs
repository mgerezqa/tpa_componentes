<!-- Modal de edición para el colaborador juridico -->
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header bg-warning text-dark">
            <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Editar Colaborador jurídico</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <!-- Cuerpo del modal -->
        <div class="modal-body">
            <!-- Aquí asignamos el action para que apunte a la URL de actualización -->
            <form action="{{action}}" method="POST">

                <!-- Campo Razón Social -->
                <div class="mb-3">
                    <label for="editarRazonSocial" class="form-label">Razón Social</label>
                    <input type="text" class="form-control" id="editarRazonSocial"
                           name="razonSocial"
                           value={{colaboradoresJuridicos.razonSocial}} required> <!-- El value representa el dato actual -->
                </div>

                <!-- Select Rubro -->
                <div class="mb-3">
                    <label for="editarRubro" class="form-label">Rubro</label>
                    <select class="form-select" id="editarRubro" name="rubro" required>
                        <option value="" disabled>Seleccionar rubro...</option>
                        <option value="EDUCACION" {{#if (eq colaboradoresJuridicos.rubro "EDUCACION")}}selected{{/if}}>Educación</option>
                        <option value="SALUD" {{#if (eq colaboradoresJuridicos.rubro "SALUD")}}selected{{/if}}>Salud</option>
                        <option value="TECNOLOGIA" {{#if (eq colaboradoresJuridicos.rubro "TECNOLOGIA")}}selected{{/if}}>Tecnología</option>
                        <option value="ENERGIA" {{#if (eq colaboradoresJuridicos.rubro "ENERGIA")}}selected{{/if}}>Energía</option>
                        <option value="PRODUCCION" {{#if (eq colaboradoresJuridicos.rubro "PRODUCCION")}}selected{{/if}}>Producción</option>
                        <option value="FINANZAS" {{#if (eq colaboradoresJuridicos.rubro "FINANZAS")}}selected{{/if}}>Finanzas</option>
                        <option value="COMERCIO" {{#if (eq colaboradoresJuridicos.rubro "COMERCIO")}}selected{{/if}}>Comercio</option>
                        <option value="SERVICIOS" {{#if (eq colaboradoresJuridicos.rubro "SERVICIOS")}}selected{{/if}}>Servicios</option>
                        <option value="CONSTRUCCION" {{#if (eq colaboradoresJuridicos.rubro "CONSTRUCCION")}}selected{{/if}}>Construcción</option>
                        <option value="OTRO" {{#if (eq colaboradoresJuridicos.rubro "OTRO")}}selected{{/if}}>Otro</option>
                    </select>
                </div>


                <!-- Campo Email -->
                <div class="mb-3">
                    <label for="editarEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="editarEmail"
                           name="email"
                           value={{colaboradoresJuridicos.email}} required>
                </div>

                <!-- Select Tipo de Razón Social -->
                <div class="mb-3">
                    <label for="editarTipoDeRazonSocial" class="form-label">Tipo de Razón Social</label>
                    <select class="form-select" id="editarTipoDeRazonSocial" name="tipoRazonSocial" required>
                        <option value="" disabled>Seleccionar tipo...</option>
                        <option value="GUBERNAMENTAL" {{#if (eq colaboradoresJuridicos.tipoRazonSocial "GUBERNAMENTAL")}}selected{{/if}}>Gubernamental</option>
                        <option value="ONG" {{#if (eq colaboradoresJuridicos.tipoRazonSocial "ONG")}}selected{{/if}}>ONG</option>
                        <option value="EMPRESA" {{#if (eq colaboradoresJuridicos.tipoRazonSocial "EMPRESA")}}selected{{/if}}>Empresa</option>
                        <option value="INSTITUCION" {{#if (eq colaboradoresJuridicos.tipoRazonSocial "INSTITUCION")}}selected{{/if}}>Institución</option>
                    </select>
                </div>


                <!-- Estado -->
                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="estadoHeladeraToggle"
                               name="activo" {{#if colaboradoresJuridicos.activo}}checked{{/if}}>
                        <label class="form-check-label" for="estadoHeladeraToggle">Activo</label>
                    </div>
                </div>

                <!-- Pie del modal -->
                <div class="modal-footer d-flex justify-content-between">
                    <button type="submit" class="btn btn-secondary" data-dismiss="modal"><i class="bi bi-x-circle"></i> Cancelar</button>
                    <button type="submit" class="btn btn-warning"><i class="bi bi-pencil"></i> Guardar cambios</button>
                </div>

            </form>
        </div>
    </div>
</div>
